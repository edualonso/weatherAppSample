<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.barbasdev.weatherappsample.main.MainActivity">

    <Button
        android:id="@+id/buttonMemoryApixu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MEMORY (APX)"/>

    <Button
        android:id="@+id/buttonMemoryOpenWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MEMORY (OPN)" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/buttonRoomApixu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ROOM (APX)"/>

    <Button
        android:id="@+id/buttonRoomOpenWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ROOM (OPN)" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/buttonRealmApixu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REALM (APX)"/>

    <Button
        android:id="@+id/buttonRealmOpenWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REALM (OPN)" />

</LinearLayout>
